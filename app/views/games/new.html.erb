<h1>New Game</h1>

<div>
<% @letters.each do |letter| %>
    <p class="letters"><%= letter %></p>
  <% end %>
</div>

<p>What is the longest word you can find?</p>
<form action="score" method="post" data-turbo="false">
  <!-- ... -->
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" value="<%= params[:word] %>">
  <input type="submit" value="Play">
</form>

<p><%= link_to "Play again", new_path %></p>
